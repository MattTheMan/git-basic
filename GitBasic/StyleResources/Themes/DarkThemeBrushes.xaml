    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Basic Default Brushes  -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Color_001}" />
    <SolidColorBrush x:Key="ForegoundBrush" Color="{StaticResource Color_003}" />
    <SolidColorBrush x:Key="LightForegroundBrush" Color="{StaticResource Color_004}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Color_002}" />
    <SolidColorBrush x:Key="AccentBrush1" Color="{StaticResource AccentColor1}" />
    <SolidColorBrush x:Key="AccentBrush2" Color="{StaticResource AccentColor2}" />
    <SolidColorBrush x:Key="AccentBrush3" Color="{StaticResource AccentColor3}" />
    <SolidColorBrush x:Key="AccentBrush4" Color="{StaticResource AccentColor4}" />
    <SolidColorBrush x:Key="AccentBrush5" Color="{StaticResource AccentColor5}" />

    <!--  Window Brushes  -->
    <SolidColorBrush x:Key="WindowButtonHoverBrush" Color="{StaticResource Color_008}" />
    <SolidColorBrush x:Key="WindowButtonPressedBrush" Color="{StaticResource Color_007}" />

    <!--  Button Brushes  -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource Color_002}" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource Color_002}" />
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="{StaticResource Color_007}" />
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="{StaticResource Color_007}" />
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="{StaticResource AccentColor1}" />
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="{StaticResource AccentColor1}" />
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4" />
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5" />
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383" />


    <!--  MenuItem Brushes  -->
    <SolidColorBrush x:Key="MenuItemSelectedBackgroundBrush" Color="{StaticResource Color_008}" />
    <SolidColorBrush x:Key="MenuItemSelectedBorderBrush" Color="{StaticResource Color_008}" />
    <SolidColorBrush x:Key="MenuItemDisabledBackgroundBrush" Color="{StaticResource Color_009}" />
    <SolidColorBrush x:Key="MenuItemDisabledBorderBrush" Color="{StaticResource Color_009}" />





