<Application
    x:Class="GitBasic.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GitBasic"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Styles  -->
                <ResourceDictionary Source="pack://application:,,,/StyleResources/Themes/DarkThemeBrushes.xaml" />
                <ResourceDictionary Source="pack://application:,,,/StyleResources/Themes/DarkThemeIcons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/StyleResources/ImplicitStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/StyleResources/ExplicitStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
