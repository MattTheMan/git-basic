<UserControl
    x:Class="GitBasic.Controls.FileStatusControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GitBasic.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="2">
            <TextBlock Grid.Row="0" Text="Staged Files" />
        </Grid>

        <GridSplitter
            Grid.Row="1"
            Height="5"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource BorderBrush}" />

        <StackPanel Grid.Row="2" Margin="2">
            <TextBlock Text="Unstaged Files" />
            <TreeView
                Grid.Row="0"
                BorderThickness="0"
                Style="{StaticResource BaseControlStyle}">
                <TreeView.Resources>
                    <Style BasedOn="{StaticResource BaseControlStyle}" TargetType="TreeViewItem" />
                </TreeView.Resources>
                <TreeViewItem Header="ProgramRoot" IsExpanded="True">
                    <TreeViewItem Header="Controls" IsExpanded="True">
                        <TreeViewItem Header="Window.cs" />
                        <TreeViewItem Header="Button.cs" />
                    </TreeViewItem>
                    <TreeViewItem Header="File.cs" />
                    <TreeViewItem Header="Themes.xaml" />
                </TreeViewItem>
            </TreeView>
        </StackPanel>


    </Grid>
</UserControl>
